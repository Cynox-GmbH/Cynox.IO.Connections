<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <GenerateDocumentationFile>True</GenerateDocumentationFile>
    <Title>Cynox.IO.Connections</Title>
    <Version>1.0.0</Version>
    <Authors>Cynox GmbH</Authors>
    <Description>Abstraction layer for communication/connection interfaces.</Description>
    <PackageProjectUrl>https://github.com/Cynox-GmbH/Cynox.IO.Connections</PackageProjectUrl>
    <RepositoryUrl>https://github.com/Cynox-GmbH/Cynox.IO.Connections</RepositoryUrl>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <PackageTags>Cynox;Abstractions;Connections;IConnection</PackageTags>
    <PackageReleaseNotes>Initial release.</PackageReleaseNotes>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <IncludeSymbols>True</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\LICENSE">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
    <None Include="..\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>
</Project>
